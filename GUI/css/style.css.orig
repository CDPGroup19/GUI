}
div#durationLength p{
	margin: 0;
}
div#duration{
	margin:20px 10px 10px 20px;
	float: left;
}
div#length{
	margin:20px 10px 10px 20px;
	float: right;
}


/*///////////////////////////////////
			TRACKING LIST
///////////////////////////////////*/
#trackingList h1{
	font-size: 20px;
}
li#buttons{
	padding:0;
}
div#uploadDeleteButtons, .ui-controlgroup-controls{
	width:100%;
	margin: 0 auto; 
	bottom:0;
	text-align:center;
}
a#save, a#delete{
	width: 30%;
	}
a#upload{
	width: 40%;
	}
ul#trackingList p, ul#trackingList h1{
	width: 65%;
	float: left;
}

